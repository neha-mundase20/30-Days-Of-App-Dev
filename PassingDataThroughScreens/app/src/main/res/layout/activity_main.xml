<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/o1Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:padding="15dp"
        android:textSize="20sp"
        android:hint="@string/enter_order1" />

    <EditText
        android:id="@+id/o2Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:padding="15dp"
        android:textSize="20sp"
        android:hint="@string/enter_order2" />

    <EditText
        android:id="@+id/o3Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:padding="15dp"
        android:textSize="20sp"
        android:hint="@string/enter_order3" />

    <EditText
        android:id="@+id/o4Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:padding="15dp"
        android:textSize="20sp"
        android:hint="@string/enter_order4" />

    <Switch
        android:id="@+id/OrderPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Preview Order"
        android:textSize="20dp"/>
</LinearLayout>